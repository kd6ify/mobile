<?xml version="1.0" encoding="UTF-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="5sp" 
	android:background="@color/widget_background">
 <RelativeLayout 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
		android:background="@drawable/list_background_grey" >
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="vertical"
		android:layout_alignParentLeft="true" >
		 <TextView android:id="@+id/text1Title"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="@color/white2"
	         android:text="Name" />
	    <TextView android:id="@+id/text1"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="#00ff00"
	         android:textSize="14sp"
			 android:layout_marginLeft="10dp"/>
	    <TextView android:id="@+id/dateTitle"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Date/Time"         	
	        android:textColor="@color/white2"/>
	    <TextView android:id="@+id/date"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="10dp"
	         android:textColor="@color/white1"
	         android:textSize="14sp" />
	     <TextView android:id="@+id/typeTitle"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Type"         	
	        android:textColor="@color/white2"/>
	    <TextView android:id="@+id/type_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/white1"
	        android:layout_marginLeft="10dp" />
	</LinearLayout>
    <ImageView android:id="@+id/type_icon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:background="@drawable/image_icon_background" />
</RelativeLayout>
</LinearLayout>
 