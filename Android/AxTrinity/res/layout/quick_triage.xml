<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="fill_parent" 
         android:layout_height="fill_parent" >
    <LinearLayout
         android:orientation="vertical"
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content"
         android:padding="5sp" >
		<TextView android:id="@+id/text1"
		    style="@style/triage_tracking_id"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:gravity="top" />
	</LinearLayout>
    <View
     	android:layout_width="wrap_content"
     	android:layout_height="1dip"
     	android:background="?android:attr/listDivider" />
	<Button android:id="@+id/btn_green"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="25"
	    android:background="@drawable/green_button"
	    android:text="Minor"
	    android:textSize="48sp"
	    android:onClick="onGreenClicked" />
	<Button android:id="@+id/btn_yellow"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="25"
	    android:background="@color/yellow"
	    android:text="Delayed"
	    android:textSize="48sp"
	    android:onClick="onYellowClicked" />
	<Button android:id="@+id/btn_red"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="25"
	    android:background="@color/red"
	    android:text="Immediate"
	    android:textSize="48sp"
	    android:onClick="onRedClicked" />
	<Button android:id="@+id/btn_black"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="25"
	    android:text="Deceased"
	    android:textSize="48sp"
	    android:onClick="onBlackClicked" />
</LinearLayout>
