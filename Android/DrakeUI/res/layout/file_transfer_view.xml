<?xml version="1.0" encoding="utf-8"?>
<com.futureconcepts.drake.ui.widget.FileTransferView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fileTransferView"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- The title bar -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView android:id="@+id/statusIcon"
            android:layout_marginRight="3dip"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:scaleType="fitCenter" />

        <TextView android:id="@+id/title"
            android:padding="5sp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fadingEdge="horizontal"
            android:scrollHorizontally="true"
            android:layout_marginRight="20dip" />
        
        <ImageView android:id="@+id/deliveryIcon"
            android:layout_marginRight="3dip"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chat_msg_status_ok"
             />
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#ff202020" />
    
    <LinearLayout android:id="@+id/transferPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/text_divider_horizontal">

        <TextView android:id="@+id/txtInvitation"
            android:padding="5sp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffad45d6"
            android:text="@string/invitation_prompt" />

  	    <View android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:background="#ff202020" />
        
        <TextView android:id="@+id/textNote"
            android:padding="5sp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffad45d6" />
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:id="@+id/btnAccept"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:textSize="30sp"
                android:text="@string/accept_file_transfer" />

            <Button android:id="@+id/btnReject"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:textSize="30sp"
                android:text="@string/reject_file_transfer" />
        </LinearLayout>
    </LinearLayout>
</com.futureconcepts.drake.ui.widget.FileTransferView>
